{% schema %}
{
  "name": "Section 4",
  "settings": [
    {
      "type": "text",
      "id": "video_text",
      "label": "Video Content Text",
      "default": "Flip the cards and let your desires unfold"
    },
     {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', Arial, sans-serif;
  }

  .section4Container {
    padding-top: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .videoContent {
    text-transform: uppercase;
    font-size: 27px;
    font-weight: 800;
    text-align: center;
    width: fit-content;
    height: fit-content;
    color: #000000;
  }

  video {
    margin-top: 20px;
    width: 100%;
    height: auto;
  }

  @media (min-width: 426px) {
    .section4Container {
      padding-top: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .videoContent {
      font-size: 33px;
      color: #000000
    }

    video {
      width: 50%;
      height: auto;
    }

    .videoDiv {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      background-color: #000000;
      padding: 3px 0;
    }
  }
{% endstyle %}

<div class="section4Container">
  <div class="videoContent">{{ section.settings.video_text }}</div>
  <div class="videoDiv">
    <video src="{{ section.settings.video_url }}" controls></video>
  </div>
</div>
