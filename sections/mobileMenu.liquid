{% schema %}
{
  "name": "Mobile Menu",
  "settings": [],
  "blocks": [
    {
      "type": "menu_item",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Menu Title"
        },
        {
          "type": "image_picker",
          "id": "menu_image",
          "label": "Menu Image"
        },
        {
          "type": "url",
          "id": "menu_link",
          "label": "Menu Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mobile Menu",
      "category": "Header"
    }
  ]
}
{% endschema %}

<div class="container">
  <div id="mySidenav" class="sidenav">
    <a id="buttonClose" class="closebtn" onclick="closeNav()">&times;</a>

    <div class="upperMostDiv">
      <div class="borosilDiv">
        <img
          class="logo"
          src="{{ 'Borosil-logo-white.png' | asset_img_url }}"
          alt="borosil image"
          height=""
          width=""
        >
      </div>
    </div>

    {% for block in section.blocks %}
      <div class="equalDiv nav-item">
        <div class="flexDiv">
          <div class="left1">
            <div class="insideLeft">
              <div class="insideText">{{ block.settings.menu_title }}</div>
              <div class="insideArrow">
                <img
                  onclick="toggleBox('box{{ forloop.index }}')"
                  src="arrow.png"
                  alt="{{ block.settings.menu_title }} Image"
                  height="100%"
                  width="100%"
                  style="color: aliceblue; cursor: pointer"
                >
              </div>
            </div>
          </div>
          <div class="right1">
            <img
              src="{{ block.settings.menu_image | image_url: '130x' }}"
              alt="{{ block.settings.menu_title }} Image"
              height="90%"
              width="90%"
            >
          </div>
        </div>
        <div id="box{{ forloop.index }}" class="box">
          <div class="hiddenDiv1">
            <div class="kitchenAppliancesHeading">
              <div>{{ block.settings.menu_title }}</div>
              <a href="{{ block.settings.menu_link }}">View All</a>
            </div>
            <!-- Add sub-menu items here if needed -->
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <nav class="navBar">
    <div class="insideDiv">
      <span style="font-size: 30px; cursor: pointer" onclick="openNav()">&#9776;</span>
    </div>
    <div class="logoDiv">
      <div class="logoInsideDiv">
        <img
          class="logologo"
          src="{{ 'arrow.png' | asset_img_url }}"
          alt="borosil image"
          height=""
          width=""
        >
      </div>
    </div>
  </nav>
</div>
