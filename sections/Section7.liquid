<link rel="stylesheet" href="{{ 'Section7.css' | asset_url }}">

<div class="fivesection">
  <div class="fiveheading">
    <span class="game">{{ section.settings.heading_top }}</span>
    <span>{{ section.settings.heading_sub }}</span>
  </div>
  <div class="fivecards">
    <div class="fivecard">
      <div class="cardimg">
        <img src="{{ section.settings.card1_image | img_url: 'original' }}" alt="Card 1">
      </div>
      <div class="cardheading">
        <h2>{{ section.settings.card1_title }}</h2>
        <span>{{ section.settings.card1_subtitle }}</span>
      </div>
    </div>
    <div class="fivecard">
      <div class="cardimg">
        <img src="{{ section.settings.card2_image | img_url: 'original' }}" alt="Card 2">
      </div>
      <div class="cardheading">
        <h2>{{ section.settings.card2_title }}</h2>
        <span>{{ section.settings.card2_subtitle }}</span>
      </div>
    </div>
    <div class="fivecard">
      <div class="cardimg">
        <img src="{{ section.settings.card3_image | img_url: 'original' }}" alt="Card 3">
      </div>
      <div class="cardheading">
        <h2>{{ section.settings.card3_title }}</h2>
        <span>{{ section.settings.card3_subtitle }}</span>
      </div>
    </div>
    <div class="fivecard">
      <div class="cardimg">
        <img src="{{ section.settings.card4_image | img_url: 'original' }}" alt="Card 4">
      </div>
      <div class="cardheading">
        <h2>{{ section.settings.card4_title }}</h2>
        <span>{{ section.settings.card4_subtitle }}</span>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Five Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_top",
      "label": "Top Heading",
      "default": "GAME HIGHLIGHTS"
    },
    {
      "type": "text",
      "id": "heading_sub",
      "label": "Sub Heading",
      "default": "HIGHLIGHTS"
    },
    {
      "type": "image_picker",
      "id": "card1_image",
      "label": "Card 1 Image"
    },
    {
      "type": "text",
      "id": "card1_title",
      "label": "Card 1 Title",
      "default": "3 LEVELS"
    },
    {
      "type": "text",
      "id": "card1_subtitle",
      "label": "Card 1 Subtitle",
      "default": "60 CARDS"
    },
    {
      "type": "image_picker",
      "id": "card2_image",
      "label": "Card 2 Image"
    },
    {
      "type": "text",
      "id": "card2_title",
      "label": "Card 2 Title",
      "default": "FOR ADULTS"
    },
    {
      "type": "text",
      "id": "card2_subtitle",
      "label": "Card 2 Subtitle",
      "default": "AGES 21+"
    },
    {
      "type": "image_picker",
      "id": "card3_image",
      "label": "Card 3 Image"
    },
    {
      "type": "text",
      "id": "card3_title",
      "label": "Card 3 Title",
      "default": "CRAFTED"
    },
    {
      "type": "text",
      "id": "card3_subtitle",
      "label": "Card 3 Subtitle",
      "default": "FOR COUPLES"
    },
    {
      "type": "image_picker",
      "id": "card4_image",
      "label": "Card 4 Image"
    },
    {
      "type": "text",
      "id": "card4_title",
      "label": "Card 4 Title",
      "default": "100%"
    },
    {
      "type": "text",
      "id": "card4_subtitle",
      "label": "Card 4 Subtitle",
      "default": "FUN"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
